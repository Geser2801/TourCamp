<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- INICIO DE LA VENTANA DE LOGIN -->
    <!-- ESTILO DEL TITULO -->
    <style name="style_title_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_txt_text_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/purple_200</item>
        <item name="android:layout_margin">10dp</item>
        <item name="fontFamily">@font/abril_fatface</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- ESTILO DE LA IMAGEN -->
    <style name="style_Img_Login">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- ESTILO DE CAJA DE TEXTOS -->
    <style name="style_cajaTextosLogin">
        <item name="android:textSize">@dimen/dimen_txt_cajasTextoLogin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">@dimen/dimen_Borde_Caja_Texto</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:minHeight">@dimen/dimen_txt_Tamanio_Alto_Caja_Texto</item>
    </style>

    <!-- ESTILO PARA EL BOTON DE REGISTRO -->
    <style name="btn_Estilo_Registro">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textSize">@dimen/dimen_btn_Registro</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- TEXTO DE SI NO TIENES CUENTA -->
    <style name="txt_Estilo_Si_No_Tienes_Cuenta">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_txt_No_Tienes_Cuenta</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- TEXTO DE REGISTRATE AQUI -->
    <style name="txt_Estilo_Registrate_Aqui">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_txt_Registrate_Aqui</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!-- FIN DE LA VENTANA DE LOGIN -->



    <!-- INICIO DE LA VENTANA REGISTRO -->
    <!-- ESTILO DEL TITULO -->
    <style name="style_title_text_Registro">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_txt_text_title_registro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_txt_Registro</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/black_ops_one</item>
    </style>

    <!-- ESTILO DE LA IMAGEN -->
    <style name="style_Img_Registro">
        <item name="android:layout_width">227dp</item>
        <item name="android:layout_height">142dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- ESTILO DE CAJA DE TEXTOS -->
    <style name="style_cajaTextosRegistro">
        <item name="android:textSize">@dimen/dimen_txt_cajasTextoLogin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/boogaloo</item>
        <item name="cornerRadius">@dimen/dimen_Borde_Caja_Texto</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:minHeight">@dimen/dimen_txt_Tamanio_Alto_Caja_Texto</item>
    </style>

    <!-- ESTILO DE TEXTO GENERO -->
    <style name="style_TextoGenero">
        <item name="android:textSize">@dimen/dimen_txt_size_genero</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/boogaloo</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_Radio_Group_Genero">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- ESTILO PARA LOS RADIOBUTTONS -->
    <style name="rb_F_M">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/almendra_bold_italic</item>
        <item name="android:textSize">@dimen/dimen_Text_R</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- ESTILO PARA EL TEXTO TERMINOS Y CONDICIONES -->
    <style name="txt_Terminos_Condiciones">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_Term_Cond</item>
        <item name="fontFamily">@font/finger_paint</item>
        <item name="android:textSize">@dimen/dimen_txt_Term_Cond</item>
    </style>
    <!-- FIN DE LA VENTANA REGISTRO -->



    <!-- INICIO DE LA VENTANA DE PRINCIPAL -->
    <!-- COLOR ACTIONBAR -->
    <style name="tool_bar_sencillo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@color/color_fondo_toolbar</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

</resources>